[Unit]
Description=Minecraft Server
After=network.target

[Service]
User=minecraft
Nice=1
KillMode=none
SuccessExitStatus=0 1
ProtectHome=true
ProtectSystem=full
PrivateDevices=true
NoNewPrivileges=true
WorkingDirectory=/opt/minecraft-server
ExecStart=/usr/bin/java -Xmx1024M -Xms1024M -jar /opt/minecraft-server/minecraft_server.jar nogui
Restart=on-failure

[Install]
WantedBy=multi-user.target